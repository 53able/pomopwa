{
  "framework": "vite",
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "headers": [
    { 
      "source": "/sw.js", 
      "headers": [
        { 
          "key": "Cache-Control", 
          "value": "no-cache" 
        }
      ] 
    },
    { 
      "source": "/manifest.webmanifest", 
      "headers": [
        { 
          "key": "Content-Type", 
          "value": "application/manifest+json" 
        }
      ] 
    },
    { 
      "source": "/(.*)", 
      "headers": [
        { 
          "key": "Permissions-Policy", 
          "value": "screen-wake-lock=(self)" 
        }
      ] 
    }
  ]
}
